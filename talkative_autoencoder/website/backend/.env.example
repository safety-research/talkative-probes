# Startup default group (overrides JSON settings.default_group)
DEFAULT_GROUP=gemma3-27b-it

# Infrastructure
DEVICES=cuda:0
NUM_WORKERS_PER_GPU=1
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app
API_KEY=
MAX_QUEUE_SIZE=100
MAX_TEXT_LENGTH=20000
HOST=0.0.0.0
PORT=8000
REQUEST_TIMEOUT=300
RATE_LIMIT_PER_MINUTE=60
LAZY_LOAD_MODEL=false
TUNED_LENS_DIR=

# Global model/group behavior overrides
GLOBAL_USE_BF16=true
GLOBAL_NO_ORIG=true
GLOBAL_BATCH_SIZE=48
GLOBAL_AUTO_BATCH_SIZE_MAX=768

# Per-group override (hyphens → underscores)
# MODEL_GROUP_gemma2_9b_it_BATCH_SIZE=64

# Per-model override (hyphens → underscores)
# MODEL_gemma3_27b_chat_BATCH_SIZE=16

# Redis (optional)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# RunPod (optional)
# RUNPOD_POD_ID=
# RUNPOD_API_KEY=

# Legacy (optional; kept for back-compat)
# CHECKPOINT_PATH=/path/to/checkpoint.pt
# BATCH_SIZE=32
# USE_BF16=true
# AUTO_BATCH_SIZE_MAX=512